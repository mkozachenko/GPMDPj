<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FileTable">
   <children>
      <TableView fx:id="libraryTable" onContextMenuRequested="#itemMenuClick" onMouseClicked="#tableClicked" prefHeight="420.0" prefWidth="1233.0">
         <columns>
            <TableColumn fx:id="idCol" editable="false" prefWidth="75.0" text="id" visible="false">
               <cellValueFactory>
                  <PropertyValueFactory property="id" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="nameCol" prefWidth="75.0" text="Name">
               <cellValueFactory>
                  <PropertyValueFactory property="name" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="albumCol" prefWidth="75.0" text="Album">
               <cellValueFactory>
                  <PropertyValueFactory property="album" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="artistCol" prefWidth="75.0" text="Artist">
               <cellValueFactory>
                  <PropertyValueFactory property="artist" />
               </cellValueFactory>
            </TableColumn>
         </columns>
         <items>
            <FXCollections fx:factory="observableArrayList" />
         </items>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
